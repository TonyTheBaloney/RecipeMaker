<h1>Add Ingredient</h1>

<input type="text" id="ingredient" name="ingredient"><br><br>

<button id="ingredientButton">Add Ingredient</button>

<script>
document.getElementById("ingredientButton").addEventListener('click', function() {
    let name = document.getElementById("ingredient").value;

    fetch(`/addIngredient?name=${name}`, {
        method: 'POST'
    }).then((response)=>{
        console.log(response)
    })
});
</script>