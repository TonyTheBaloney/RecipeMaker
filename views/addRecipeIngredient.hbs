<label>Pick the recipe</label>
<select name="recipe" id="recipes">
    {{#if post.recipesArr}}
        {{#each post.recipesArr}}
            <option value="{{this.recipeID}}">{{this.recipeName}}</option>
        {{/each}}
    {{/if}}

</select>

<select name="ingredients" id="ingredients">
    {{#if post.ingredientsArr}}
        {{#each post.ingredientsArr}}
            <option value="{{this.ingredientID}}">{{this.name}}</option>
        {{/each}}
    {{/if}}

</select>

<input type="text" id="quantity" name="quantity" placeholder="Quantity"><br><br>

<button id="ingredientButton">Add Ingredient to Recipe</button>

<script>
document.getElementById("ingredientButton").addEventListener('click', function() {
    let recipe = document.getElementById("recipes").value;
    let ingredient = document.getElementById("ingredients").value;
    let quantity = document.getElementById("quantity").value;

    if(recipe.length != 0 && ingredient.length != 0 && quantity.length != 0){
        fetch(`/addRecipeIngredient?recipe=${recipe}&ingredient=${ingredient}&quantity=${quantity}`, {
            method: 'POST'
        }).then((response)=>{
            console.log(response)
        })
    }



    console.log(recipe + " " + ingredient);
});
</script>